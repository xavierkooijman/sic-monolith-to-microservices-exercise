{
  "swagger": "2.0",
  "info": {
    "title": "My API - Reviews Service",
    "description": "Swagger documentation for the reviews service",
    "version": "1.0.0"
  },
  "host": "localhost:5002",
  "basePath": "/",
  "tags": [
    {
      "name": "Reviews",
      "description": "Reviews related endpoints"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/reviews/": {
      "get": {
        "tags": [
          "Reviews"
        ],
        "description": "Get all reviews or filter by movieId",
        "parameters": [
          {
            "name": "movieId",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Reviews retrieved successfully",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/GetReview"
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Reviews"
        ],
        "description": "Create a new review",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "New review object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CreateReview"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Review created successfully",
            "schema": {
              "$ref": "#/definitions/GetReview"
            }
          },
          "400": {
            "description": "Invalid data"
          }
        }
      }
    },
    "/reviews/{id}": {
      "get": {
        "tags": [
          "Reviews"
        ],
        "description": "Get a review by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Review ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Review retrieved successfully",
            "schema": {
              "$ref": "#/definitions/GetReview"
            }
          },
          "400": {
            "description": "Invalid id format"
          },
          "404": {
            "description": "Review not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Reviews"
        ],
        "description": "Delete a review by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Review ID"
          }
        ],
        "responses": {
          "204": {
            "description": "Review deleted successfully"
          },
          "404": {
            "description": "Review not found"
          }
        }
      },
      "put": {
        "tags": [
          "Reviews"
        ],
        "description": "Update a review by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Review ID"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Updated review object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UpdateReview"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Review updated successfully",
            "schema": {
              "$ref": "#/definitions/GetReview"
            }
          },
          "400": {
            "description": "Invalid data"
          },
          "404": {
            "description": "Review not found"
          }
        }
      }
    }
  },
  "definitions": {
    "GetReview": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 3
        },
        "movieId": {
          "type": "number",
          "example": 2
        },
        "userId": {
          "type": "number",
          "example": 1
        },
        "text": {
          "type": "string",
          "example": "Classic sci-fi."
        }
      }
    },
    "CreateReview": {
      "type": "object",
      "properties": {
        "movieId": {
          "type": "number",
          "example": 1
        },
        "userId": {
          "type": "number",
          "example": 2
        },
        "text": {
          "type": "string",
          "example": "Amazing movie!"
        }
      }
    },
    "UpdateReview": {
      "type": "object",
      "properties": {
        "movieId": {
          "type": "number",
          "example": 2
        },
        "userId": {
          "type": "number",
          "example": 1
        },
        "text": {
          "type": "string",
          "example": "Updated review text"
        }
      }
    }
  }
}